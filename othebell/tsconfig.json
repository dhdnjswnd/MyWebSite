{
  "compilerOptions": {
    "target": "es5", // 어떤 js로 컴파일 할 지 
    "lib": [ // 어떤 환경에서 사용하는 지 정의(api자동완성기능 제공)
      "dom", // 브라우저
      "dom.iterable",
      "esnext"
    ],
    "baseUrl": "./src", // ./src를 절대 경로로 지정.
    "allowJs": true, // ts안에 js허용 - js파일 import가능
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx"
  },
  "include": [ // 컴파일할 폴더, src의모든 폴더 확인함
    "src"
  ],
  "exclude": [
    "node_modules"
  ]
}
